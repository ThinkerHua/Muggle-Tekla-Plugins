<Application x:Class="Muggle.TeklaPlugins.MainWindow.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cvt="clr-namespace:Muggle.TeklaPlugins.MainWindow.Converters"
             xmlns:cvc="clr-namespace:Muggle.TeklaPlugins.Common.WPF.ValueConverters;assembly=Common.WPF"
             xmlns:local="clr-namespace:Muggle.TeklaPlugins.MainWindow"
             xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
             xmlns:views="clr-namespace:Muggle.TeklaPlugins.MainWindow.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/ExpanderStyle1.xaml" />
                <ResourceDictionary Source="/Styles/MenuButtonStyle1.xaml" />
                <ResourceDictionary Source="/Styles/ButtonStyle1.xaml" />
                <ResourceDictionary Source="/Styles/PluginCardButtonStyle1.xaml" />
                <ResourceDictionary Source="/Styles/Uniform.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <cvc:EnumToBoolValueConverter x:Key="enumToBool" />
            <cvt:MultiplesValueConverter x:Key="multiples" />
            <cvt:PluginNameToIconValueConverter x:Key="pluginNameToIcon" />
            <cvt:RoundDownValueConverter x:Key="roundDown" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
